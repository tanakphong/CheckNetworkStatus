<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_cardview">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_rowitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_cardview">

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/rowitem_header" />

            <TextView
                android:id="@+id/tv_subheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_header"
                android:layout_marginStart="@dimen/rowitem_subheader_margin_start"
                android:layout_toEndOf="@id/tv_header"
                android:text="@string/subheader"
                android:textSize="@dimen/rowitem_subheader" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_header"
                android:text="@string/title"
                android:textSize="@dimen/rowitem_title" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:text="@string/desc"
                android:textSize="@dimen/rowitem_desc" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>